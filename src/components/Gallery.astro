---
const { items } = Astro.props;
import Image from "astro/components/Image.astro";
---

<div class="p-3">
  <div class="columns-1 lg:columns-2 w-full gap-3 mx-auto space-y-3">
    {items.map((item: any) => (
      <div class="break-inside-avoid rounded overflow-hidden">
        <a
        href={item.img}
        target="_blank"
        >
          <Image 
            src={item.img}
            alt={item.title}
            loading="lazy"
            width={1920}
            height={1080}
          />
        </a>
      </div>
    ))}
  </div>
</div>
